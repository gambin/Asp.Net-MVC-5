@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>
<p><a class="btn btn-primary" href="/Customers/New" role="button">New Customer</a></p>

@if (Model.Any())
{
    <table class="table table-bordered table-hover">
        <th>Name</th>
        <th>Membership Type</th>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <p>@Html.ActionLink(user.Name, "Edit", "Customers", new { id = user.Id }, null)</p>
                </td>
                <td>@user.MembershipType.Name</td>
            </tr>
        }
    </table>
}
else
{
    <p>Não há usuários a serem exibidos.</p>
}

